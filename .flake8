[flake8]
max-line-length = 127
exclude = 
    .venv,
    .git,
    __pycache__,
    .pytest_cache,
    build,
    dist,
    *.egg-info,
    migrations,
    node_modules
ignore = 
    E203,
    W503,
    E501,
    F401,
    F403,
    F405
per-file-ignores =
    __init__.py:F401
    tests/*:E501
    app/__init__.py:F401 
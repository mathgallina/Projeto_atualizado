# Configurações do Flask
FLASK_APP=app.py
FLASK_ENV=development
FLASK_DEBUG=True

# Chave secreta para sessões (GERE UMA CHAVE ÚNICA!)
SECRET_KEY=sua-chave-secreta-muito-segura-aqui

# Configurações do servidor
PORT=8001
HOST=0.0.0.0

# Configurações de banco de dados (se aplicável)
DATABASE_URL=sqlite:///app.db

# Configurações do Google Drive (para backup automático)
GOOGLE_DRIVE_CREDENTIALS_FILE=credentials.json
GOOGLE_DRIVE_TOKEN_FILE=token.json
GOOGLE_DRIVE_FOLDER_ID=seu-folder-id-aqui

# Configurações de email (se aplicável)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=seu-email@gmail.com
MAIL_PASSWORD=sua-senha-de-app

# Configurações de logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Configurações de upload
MAX_CONTENT_LENGTH=16777216  # 16MB
UPLOAD_FOLDER=static/uploads

# Configurações de segurança
SESSION_COOKIE_SECURE=False  # True em produção com HTTPS
SESSION_COOKIE_HTTPONLY=True
PERMANENT_SESSION_LIFETIME=3600  # 1 hora

# Configurações de backup
BACKUP_ENABLED=True
BACKUP_INTERVAL=24  # horas
BACKUP_RETENTION_DAYS=30 